<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom Right Shadow Layer for Depth -->
    <item android:bottom="10dp" android:right="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Darker shadow -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Slightly Closer Shadow Layer -->
    <item android:bottom="8dp" android:right="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Softer shadow -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Main Background Layer with Rounded Corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#f7f5f5" /> <!-- Light gray background color -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
