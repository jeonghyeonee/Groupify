<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경 색상 설정 -->
    <solid android:color="#FFFFFF" />

    <!-- 외곽선 설정 (선택 사항) -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- 모서리 둥글게 설정 -->
    <corners android:radius="8dp" />

    <!-- 패딩 설정 -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>