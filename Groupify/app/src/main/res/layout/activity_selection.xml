<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어떤 방식으로 정리해드릴까요?"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#4b5ae4"
        android:layout_marginTop="30dp"/>

    <FrameLayout
        android:id="@+id/button_function_container"
        android:layout_width="380dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="16dp">



        <!-- Function Button -->
        <LinearLayout
            android:id="@+id/button_function"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/selection_rounded_button"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Texts -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기능별로 분류해드려요"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="실용적으로 앱을 관리할 수 있어요"
                    android:textSize="14sp"
                    android:textColor="#808080"
                    android:layout_marginTop="7dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:src="@drawable/selection_function"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Check Icon -->
        <ImageView
            android:id="@+id/check_icon_function"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/check_icon_selected"
            android:layout_gravity="top|left"
            android:layout_margin="8dp"
            android:visibility="gone" /> <!-- Initially hidden -->
    </FrameLayout>

    <!-- Repeat for the Color Range button using FrameLayout -->
    <FrameLayout
        android:id="@+id/button_color_range_container"
        android:layout_width="380dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/button_color_range"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/selection_rounded_button"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Texts -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="색깔별로 분류해드려요"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알록달록 보기 좋아요"
                    android:textSize="14sp"
                    android:textColor="#808080"
                    android:layout_marginTop="7dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:src="@drawable/selection_color"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Check Icon -->
        <ImageView
            android:id="@+id/check_icon_color"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/check_icon_selected"
            android:layout_gravity="top|left"
            android:layout_margin="8dp"
            android:visibility="gone" /> <!-- Initially hidden -->
    </FrameLayout>

    <!-- Sync Button -->
    <LinearLayout
        android:id="@+id/button_sync_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:padding="8dp">

        <!-- Check Icon -->
        <ImageView
            android:id="@+id/sync_check_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/check_icon" />

        <!-- Sync Text -->
        <TextView
            android:id="@+id/sync_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새로운 앱이 있어요. 업데이트해주세요."
            android:textColor="#808080"
            android:layout_marginStart="8dp"
            android:textSize="16sp" />
    </LinearLayout>


    <Button
        android:id="@+id/button_proceed"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:backgroundTint="#4b5ae4"
        android:background="@drawable/border_radius"
        android:text="분류하러 가기  >"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
</LinearLayout>
